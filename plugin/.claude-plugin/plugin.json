{
  "name": "ccmemory",
  "version": "1.0.0",
  "description": "Self-contained memory system for Claude Code with vector search",
  "author": {
    "name": "JoeyEamigh"
  },
  "homepage": "https://github.com/JoeyEamigh/ccmemory",
  "repository": "https://github.com/JoeyEamigh/ccmemory",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/ccmemory-wrapper.sh hook capture",
            "timeout": 15
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/ccmemory-wrapper.sh hook summarize",
            "timeout": 120
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/ccmemory-wrapper.sh hook cleanup",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
